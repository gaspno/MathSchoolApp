<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/question_space"
    tools:context=".fragments.TestView">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewQuestion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heigth_subject_view">


        <TextView
            android:id="@+id/questionTEXT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:editable="false"
            android:maxLines="10" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/option1"
        style="@style/question_elements"
        android:layout_width="match_parent"
        android:layout_height="@dimen/EditTextHeight"
        android:background="@color/design_default_color_surface"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/option2"
        style="@style/question_elements"
        android:layout_width="match_parent"
        android:layout_height="@dimen/EditTextHeight"
        android:background="@color/design_default_color_surface"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/option3"
        style="@style/question_elements"
        android:layout_width="match_parent"
        android:layout_height="@dimen/EditTextHeight"
        android:background="@color/design_default_color_surface"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/option4"
        style="@style/question_elements"
        android:layout_width="match_parent"
        android:layout_height="@dimen/EditTextHeight"
        android:background="@color/design_default_color_surface"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/buttonCONFIRM_ASNWER"
        style="@style/question_elements"
        android:layout_width="match_parent"
        android:layout_height="@dimen/EditTextHeight"
        android:text="@string/confirmation_button" />
</LinearLayout>